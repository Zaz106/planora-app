rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Match waitlist collection
    match /WaitlistMembers/{docId} {
      
      // Allow read (to check if email exists or get count)
      allow read: if true;

      // Allow create only if data is valid
      allow create: if request.resource.data.keys().hasAll(["email", "timestamp", "createdAt"])
                    && request.resource.data.email is string
                    && request.resource.data.email.size() > 5
                    && request.resource.data.email.matches("^[^@]+@[^@]+\\.[^@]+$")
                    && request.resource.data.timestamp is int
                    && request.resource.data.createdAt is timestamp;

      // No updates or deletes allowed
      allow update, delete: if false;
    }
  }
}